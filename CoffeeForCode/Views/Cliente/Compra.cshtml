<body>
    <header>
        <nav>
            <img src="~/fonts/Home_Cliente/logo_copo.png" class="logo" alt="">
            <ul>
                <li><a href="Home" id="">Home</a></li>
                <li><a href="Cardapio" id="loc">Cardápio</a></li>
                <li><a href="Parceiro">Seja parceiro</a></li>
                <li><a href="TrabalheConosco">Trabalhe conosco</a></li>
            </ul>
        </nav>
    </header>
    <main class="first_main" style="height: 10vh; width:97vw;margin-top: 0%; ">
        <a onclick="history.back()" style="text-decoration: none;">
            <div class="back">
                <img src="~/fonts/Home_Login/voltar.png"><h4>Voltar</h4>
            </div>
        </a>
        <div class="tit"><h2>Realizar Compra</h2></div>

    </main>

    <section>
        <main class="second_main">
            <a href="" onclick="Classico()" id="foto" class="container" style="background-image: url(/fonts/Home_Cliente/Cardapio/Cafe/expresso.jpg); background-position: center; background-repeat: no-repeat; background-size: cover;">
                <div class="box" style="background: none; width:50%;">
                    <h2>Expresso</h2>
                    <h2>R$ 5,00</h2>
                </div>
            </a>
        </main>

            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h3 class="subtit">ENTREGAR EM SUA CASA</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.end_usu, new { htmlAttributes = new { @placeholder = "Endereço", @class = "campo" } })
                        @Html.ValidationMessageFor(model => model.end_usu, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.numCasa_usu, new { htmlAttributes = new { @placeholder = "N°", @class = "campo" } })
                        @Html.ValidationMessageFor(model => model.numCasa_usu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cpf_usu, new { htmlAttributes = new { @placeholder = "CPF", @class = "campo" } })
                        @Html.ValidationMessageFor(model => model.cpf_usu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.formaPag_usu, new { htmlAttributes = new { @placeholder = "Forma de Pagamento", @class = "campo" } })
                        @Html.ValidationMessageFor(model => model.formaPag_usu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="COMPRAR" class="btn_login" id="open"/>
            }
            <hr style="width: 0.5vw; height: 55vh; background-color: #B0E5F3; border: none; margin:4%;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h3 class="subtit">RETIRAR EM NOSSA LOJA</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cpf_usu, new { htmlAttributes = new { @placeholder = "CPF", @class = "campo" } })
                        @Html.ValidationMessageFor(model => model.cpf_usu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <iframe class="campo" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14629.13374852649!2d-46.8086855!3d-23.5582617!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x9d54688127eff95c!2sPadaria%20P%C3%A3o%20Bom.!5e0!3m2!1spt-BR!2sbr!4v1613140863962!5m2!1spt-BR!2sbr" width="150" height="85" frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                        <br />
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.formaPag_usu, new { htmlAttributes = new { @placeholder = "Forma de Pagamento", @class = "campo" } })
                        @Html.ValidationMessageFor(model => model.formaPag_usu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="COMPRAR" class="btn_login" id="open" />
            }
