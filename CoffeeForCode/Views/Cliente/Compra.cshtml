        #open {
            cursor: pointer;
            width: 22vw;
            margin: 0% 5%;
            display: flex;
            padding: 10px;
            justify-content: center;
            background-color: #B35149;
            text-align: center;
            text-decoration: none;
            border-radius: 25px;
            border: none;
            color: #fff;
            font: normal 12pt Candara;
        }

            #open:hover {
                transform: scale(1.1);
                transition: 0.2s ease-in-out;
                background: #a14d46;
            }

            #open:active {
                transform: scale(1);
            }
