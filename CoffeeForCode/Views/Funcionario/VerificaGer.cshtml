@model AppBancoDominio.Gerente

@{
    Layout = "~/Views/Shared/_CFCfunc.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        section {
            margin-left: 5%;
            display: inline-flex;
        }

        .text-danger {
            transition: ease 2s;
            margin-left: 20%;
            display: grid;
            color: #5E3F34;
            font: bold 12pt Comic Sans MS;
        }

        form {
            display: block;
            width: 70vw;
            height: 60vh;
            margin-top: 12%;
            margin-left: 35%;
            position: relative;
            background: #fff;
            border: solid 6px #fff6e5;
            justify-content: center;
            align-items: center;
            border-radius: 4px;
            text-align: center;
            overflow: hidden;
            transition: 0.5s;
            box-shadow: 0 15px 35px rgba(0, 0, 0, .5);
        }

        h2 {
            text-align: center;
            display: inline-flex;
            margin-top: 8%;
            font: bold 18pt Comic Sans MS;
            text-transform: uppercase;
            color: #6b4d41;
        }

        .senha {
            font: bold 15pt Candara;
            display: block;
            padding: 10px;
            width: 30vw;
            border-radius: 5px;
            border: solid 4px #FFD500;
            outline: none;
            margin: 15% 20%;
            margin-bottom: 8%;
        }

            .senha:hover {
                background: #faf2cb;
            }

        .btn_ent {
            cursor: pointer;
            width: 20vw;
            margin: 0% 28%;
            display: flex;
            padding: 15px;
            justify-content: center;
            text-align: center;
            text-decoration: none;
            border-radius: 25px;
            border: none;
            color: #fff;
            font: bold 14pt Candara;
            text-transform: uppercase;
            background-color: #b78278;
            color: #fff;
            transition: 0.5s;
        }

            .btn_ent:hover {
                background: #6b4d41;
            }

        .limpar {
            visibility: hidden;
            outline: none;
            display: block;
            margin-top: 2%;
            margin-left: 23.5%;
            text-decoration: none;
            padding: 10px;
            max-width: 100px;
            background: none;
            border: none;
            color: #677eff;
            cursor: pointer;
            font: bold 12pt sans-serif;
            transition: 0.5s;
        }

            .limpar:hover {
                text-decoration: solid underline #171720;
            }
    </style>
</head>
<body>
    <section>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <form>
                <div class="form-horizontal">
                    <h2>Insira sua senha de Gerente</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.senha_ger, new { @class = "senha" })
                            @Html.ValidationMessageFor(model => model.senha_ger, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input type="submit" value="Entrar" class="btn_ent" />
                </div>
            </form>
        }
    </section>
</body>
</html>
