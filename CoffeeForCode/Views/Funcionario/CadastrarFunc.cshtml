@model AppBancoDominio.Funcionario

@{
    ViewBag.Title = "CadastrarFunc";
    Layout = "~/Views/Shared/_CFCfunc.cshtml";
    
}
<style>
    section {
        display: inline-flex;
    }

    .text-danger {
        transition: ease 2s;
        color: #5E3F34;
        font: bold 10pt Comic Sans MS;
        padding: 5px;
        padding-right: 25px;
        width: 120%;
        margin-top: -5%;
        display: block;
        position: absolute;
    }

    form {
        display: block;
        width: 85vw;
        height: 85vh;
        margin-top: 5%;
        margin-left: 20%;
        position: relative;
        background: #fff;
        border: solid 6px #fff6e5;
        justify-content: center;
        align-items: center;
        border-radius: 4px;
        text-align: center;
        overflow: hidden;
        transition: 0.5s;
        box-shadow: 0 15px 35px rgba(0, 0, 0, .5);
    }

    h2 {
        text-align: center;
        display: block;
        font: bold 22pt Comic Sans MS;
        text-transform: uppercase;
        color: #6b4d41;
    }

    .first_main, .second_main {
        display: inline-block;
    }

    .campo {
        font: bold 15pt Candara;
        display: block;
        padding: 10px;
        width: 25vw;
        border-radius: 5px;
        border: solid 4px #FFD500;
        outline: none;
        margin: 15% 0%;
        margin-bottom: 8%;
    }

        .campo::placeholder {
            font: italic 14pt Comic Sans MS;
            opacity: 50%;
        }

    .btn_cad {
        cursor: pointer;
        width: 16vw;
        display: flex;
        padding: 15px;
        justify-content: center;
        text-align: center;
        text-decoration: none;
        border-radius: 25px;
        border: none;
        color: #fff;
        font: bold 14pt Candara;
        text-transform: uppercase;
        background-color: #b78278;
        color: #fff;
        transition: 0.5s;
    }

        .btn_cad:hover {
            background: #6b4d41;
        }

    footer {
        margin-top: 3%;
        display: flex;
    }

    .verFunc {
        font: bold 12pt Candara;
        color: #6b4d41;
        width: 20%;
        display: flex;
        padding-top: 15px;
        margin-left: 5%;
    }
</style>
<section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <form>
        <h2>CADASTRAR FUNCIONÁRIO</h2>
        <div class="first_main">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nm_func, new { htmlAttributes = new { @class = "campo", @placeholder = "Nome" } })
                    @Html.ValidationMessageFor(model => model.nm_func, "", new { @class = "text-danger", @style= "padding-right: 80px;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cg_func, new { htmlAttributes = new { @class = "campo", @placeholder = "Cargo" } })
                    @Html.ValidationMessageFor(model => model.cg_func, "", new { @class = "text-danger", @style = "padding-right: 65px;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email_func, new { htmlAttributes = new { @class = "campo", @placeholder = "E-mail" } })
                    @Html.ValidationMessageFor(model => model.email_func, "", new { @class = "text-danger", @style = "padding-right: 135px;" })
                </div>
            </div>

        </div>
        <div class="second_main">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cpf_func, new { htmlAttributes = new { @class = "campo", @placeholder = "CPF" } })
                    @Html.ValidationMessageFor(model => model.cpf_func, "", new { @class = "text-danger", @style = "padding-right: 110px;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.end_func, new { htmlAttributes = new { @class = "campo", @placeholder = "Endereço" } })
                    @Html.ValidationMessageFor(model => model.end_func, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tel_func, new { htmlAttributes = new { @class = "campo", @placeholder = "Telefone" } })
                    @Html.ValidationMessageFor(model => model.tel_func, "", new { @class = "text-danger", @style = "padding-right: 70px;" })
                </div>
            </div>

        </div>
        <footer>
         @Html.ActionLink("Ver Funcionários", "FuncCadastrados", "Funcionario", new { @class = "verFunc" } )
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn_cad" />
            </div>
        </footer>
    </form>
    }
</section>