
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_CFCfunc.cshtml";
}

<h2>Info</h2>

<style>
    body {
        margin: 0;
    }

    nav {
        background-color: #fff6e5;
        display: flex;
        position: fixed;
        width: 100vw;
    }

    .logo {
        margin-left: 8%;
        width: 6vw;
        height: 12vh;
    }

    #loc {
        background-color: #9f4845;
        color: #fff;
    }

    ul {
        display: flex;
        list-style: none;
        width: 90%;
        margin: 2%;
    }

    li a {
        font: bold 12pt comic Sans MS;
        text-decoration: none;
        color: #707070;
        display: flex;
        padding: 6px;
        text-transform: uppercase;
        border-radius: 25px;
        list-style: none;
        margin-left: 10vw;
    }

        li a:hover {
            background-color: #9f4845;
            color: white;
            transition: 0.5s;
        }

    .back {
        display: inline-flex;
        margin: 1.5%;
        padding-top: 5%;
    }

        .back img {
            width: 2.5vw;
            height: 2.5vw;
            margin: 10% 10%;
        }

        .back h3 {
            display: flex;
            color: #9f4845;
            font: bold 15pt Comic Sans MS;
        }

    .container {
        margin: 0 14%;
        border-radius: 4px;
        padding: 1%;
        width: 950px;
        height: 400px;
        display: inline-flex;
        justify-content: space-around;
    }

        .container .box {
            position: relative;
            width: 400px;
            background: #fff;
            border: solid 6px #fff6e5;
            justify-content: center;
            align-items: center;
            height: 400px;
            border-radius: 4px;
            text-align: center;
            margin-left: 2%;
            overflow: hidden;
            transition: 0.5s;
            box-shadow: 0 15px 35px rgba(0, 0, 0, .5);
        }

            .container .box:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, .5);
            }

    h2 {
        margin: 10% 2%;
        text-transform: uppercase;
        font: bold 16pt Comic Sans MS;
        text-align: center;
        color: #6b4d41;
    }

    h4 {
        margin: 15% 4%;
        font: normal 14pt Arial;
        text-align: left;
        padding: 15px;
        color: #6b4d41;
    }
</style>


